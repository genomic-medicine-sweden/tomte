nextflow_workflow {

    name "Test Workflow DOWNLOAD_REFERENCES"
    script "../main.nf"
    workflow "DOWNLOAD_REFERENCES"
    tag "subworkflow"
    tag "download_references"

    test("Should run without failures") {
        options "-stub"

        when {
            params {
                skip_download_gnomad = false
                skip_download_vep    = false
                fasta                = []
                gtf                  = []
                vep_cache            = []
            }
            workflow {
                """
                input[0] = 'GRCh37'
                input[1] = Channel.of(46)
                input[2] = Channel.of([file("${projectDir}/test_data/vep_to_download_37.csv", checkIfExists: true)])
                input[3] = Channel.of(112)
                input[4] = true
                input[5] = true
                input[6] = true
                input[7] = true
                input[8] = true
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    workflow.out.fasta,
                    workflow.out.vep_cache,
                    workflow.out.vep_plugin,
                    file(workflow.out.high_q_vcf[0]).name,
                    file(workflow.out.high_q_vcf[1]).name,
                    workflow.out.versions,
                ).match()}
            )
        }
    }
}
