nextflow_workflow {

    name "Test Workflow DOWNLOAD_REFERENCES"
    script "subworkflows/local/download_references/main.nf"
    workflow "DOWNLOAD_REFERENCES"
    tag "subworkflow"
    tag "download_references"

    test("Should run without failures") {
        options "-stub"

        when {
            params {
                skip_download_gnomad = false
                skip_download_vep    = false
                fasta                = []
                gtf                  = []
                vep_cache            = []
            }
            workflow {
                """
                input[0] = Channel.of('GRCh37')
                input[1] = Channel.of(46)
                input[2] = Channel.of([file("${projectDir}/test_data/vep_to_download_37.csv", checkIfExists: true)])
                input[3] = Channel.of(112)
                input[4] = true
                input[5] = true
                input[6] = true
                input[7] = true
                """
            }
        }

        then {
            assert workflow.success
            assert snapshot(workflow.out).match()
        }

    }
}
